        "# Create a function to compute for the grades in the semester\n",
        "def semesterGrade():\n",
        "  print(\"Prelim Grade\")\n",
        "  prelimGrade = termGrade()\n",
        "\n",
        "  print(\"Midterm Grade\")\n",
        "  midtermGrade = termGrade()\n",
        "  finalMG = (1/3)*prelimGrade + (2/3)*midtermGrade\n",
        "\n",
        "  print(\"Final Grade\")\n",
        "  finalGrade = termGrade()\n",
        "  finalFG = (1/3)*finalMG + (2/3)*finalGrade\n",
        "\n",
        "  return finalFG"
